<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="#00000000"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="64dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/back2"
        android:id="@+id/notifiction_icon"
        android:layout_height="64dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:id="@+id/notifiction_xxx"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:padding="10dp"
                style="@style/ImageViewStyle"
                android:id="@+id/notifiction_toPlay"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/subbutton_textColor"
                android:src="@mipmap/toplay"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:padding="10dp"
                android:id="@+id/notifiction_next"
                android:src="@mipmap/next"
                android:tint="@color/subbutton_textColor"
                style="@style/ImageViewStyle"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:padding="10dp"
                style="@style/ImageViewStyle"
                android:tint="@color/subbutton_textColor"
                android:id="@+id/notifiction_close"
                android:src="@mipmap/close"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:paddingEnd="6dp"
            android:layout_toStartOf="@id/notifiction_xxx"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/notifiction_title"
            android:textSize="16sp"
            android:lines="1"
            android:text="MusicOne"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:lines="1"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/notifiction_subtitle"
            android:text="MusicOne"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>