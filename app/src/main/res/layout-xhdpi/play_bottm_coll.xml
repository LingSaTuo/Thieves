<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center_vertical"
    android:layout_height="match_parent">
    <ImageView
        style="@style/ImageViewStyle"
        android:layout_weight="1"
        android:padding="30dp"
        android:id="@+id/player_activity_show_list"
        android:src="@mipmap/list" />
    <ImageView
        style="@style/ImageViewStyle"
        android:layout_weight="1"
        android:padding="30dp"
        android:id="@+id/player_activity_last"
        android:src="@mipmap/last" />
    <ImageView
        style="@style/ImageViewStyle"
        android:layout_weight="1"
        android:padding="30dp"
        android:id="@+id/player_activity_play_pause"
        android:src="@mipmap/toplay"/>
    <ImageView
        style="@style/ImageViewStyle"
        android:layout_weight="1"
        android:src="@mipmap/next"
        android:padding="30dp"
        android:id="@+id/player_activity_next"/>
    <ImageView
        style="@style/ImageViewStyle"
        android:layout_weight="1"
        android:padding="30dp"
        android:tint="@color/colorAccent"
        android:src="@mipmap/loop_"/>
</LinearLayout>